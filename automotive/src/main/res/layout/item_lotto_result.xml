<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- 회차 -->
    <TextView
        android:id="@+id/roundText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:gravity="center"
        android:text="회차"
        android:textSize="16sp" />

    <!-- 로또 당첨 번호 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2.5"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/numbersText_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/small_circle_background_31_40"
            android:text="로또 당첨번호1"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/numbersText_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/small_circle_background_31_40"
            android:text="로또 당첨번호2"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/numbersText_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/small_circle_background_31_40"
            android:text="로또 당첨번호3"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/numbersText_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/small_circle_background_31_40"
            android:text="로또 당첨번호4"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/numbersText_5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/small_circle_background_31_40"
            android:text="로또 당첨번호5"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/numbersText_6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/small_circle_background_31_40"
            android:text="로또 당첨번호6"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- 보너스 -->
    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"
        android:layout_gravity="center">
        <TextView
            android:id="@+id/bonusText"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/black_small_circle"
            android:padding="5dp"
            android:text="보너스"
            android:textSize="16sp" />
    </FrameLayout>

    <!-- 당첨자 수 -->
    <TextView
        android:id="@+id/winnerCountText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="당첨자수"
        android:layout_gravity="center"
        android:textSize="16sp" />

    <!-- 1인당 당첨금액 -->
    <TextView
        android:id="@+id/prizeAmountText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:layout_gravity="center|right"
        android:text="1인당 당첨금액"
        android:textSize="16sp" />
</LinearLayout>